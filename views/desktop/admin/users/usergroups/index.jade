h1= self.t('admin.users.usergroups.title.index')

ul
  - each group_name in self.usergroups
    li
      a(href=self.link_to('admin.users.usergroups.edit', { short_name:group_name}))= group_name
      button.btn.btn-primary.btn-mini(id=group_name, type='button', data-on-click='admin.users.usergroups.remove') #{self.t('admin.users.usergroups.button.remove')}

button.btn.btn-primary.btn-large(
  type='button',
  onclick="window.location = nodeca.runtime.router.linkTo('admin.users.usergroups.add'); return false;") #{self.t('admin.users.usergroups.button.add')}
