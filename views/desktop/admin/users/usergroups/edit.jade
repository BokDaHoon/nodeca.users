include ./partials/_display_value

form.form-horizontal(data-on-submit='admin.users.usergroups.update')
  - self.errors = self.errors || {}
  - var _status_class, _input_help_text

  legend
    h1 #{self.head.title}

  input(type="hidden", name='short_name', id='short_name', value=self.current.short_name)

  include ./partials/_parent_group_select

  - each category, category_name in self.settings_categories

    legend #{self.t('admin.setting.category.' + category_name)}
    - each item, item_name in category
      mixin display_value(item_name, item)

  .control-group
    .controls
      button.btn.btn-primary.btn-large(type='submit') #{self.t('admin.users.usergroups.edit.save')}
