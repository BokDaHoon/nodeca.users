include ./partials/_display_value

article
  include ../../../common/widgets/breadcrumbs

  .row
    .span8.offset2.well.well-form
      form.form-horizontal(data-on-submit='admin.users.usergroups.create')
        input(type="hidden", name='short_name', id='short_name', value=self.short_name)
        H1= self.short_name

        - var handler = 'admin.users.usergroups.update'
        -each category, category_name in self.item_categories

          legend #{category_name}
          -each item, item_name in category
            .control-group
              label.control-label(for=item_name) #{self.t('admin.settings.usergroups.'+ item_name + '_title')}
              .controls
                .row-fluid
                  - if (!('value' in item))
                    - item.value = item.default

                  mixin display_value(item_name, item.value, item.type, handler)
                  span.help-block #{self.t('admin.settings.usergroups.'+ item_name + '_help')}
