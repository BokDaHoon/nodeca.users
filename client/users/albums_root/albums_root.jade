- var own_page = (self.runtime.user_hid === self.user_hid)
- self.add_raw_data('profile_tab', own_page)

#content
  != self.partial('@common.blocks.breadcrumbs')

  .breadcrumbs
    a.btn.btn-default.btn-sm(href=self.link_to('users.album', { 'user_hid': self.user_hid }))
      =self.t('all_media')
    if own_page
      |  
      button.btn.btn-default.btn-sm(data-on-click='users.album.create')= self.t('create_album')


  header.page-head
    h1.page-head__title(itemprop='name')= self.t('title')
    //-p.page-head__descr.hidden-xs(itemprop='description')

  ul.user-albumlist
    != self.partial('@users.albums_root.list')
