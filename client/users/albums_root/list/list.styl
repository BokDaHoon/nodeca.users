@import "nodeca.core/client/common/_variables"

.thumb
  height '$$ N.config.options.users.media.resize.sm.height + "px" $$'
  width '$$ N.config.options.users.media.resize.sm.max_width + "px" $$'

.thumb-image
  height '$$ N.config.options.users.media.resize.sm.height + "px" $$'
  max-width '$$ N.config.options.users.media.resize.sm.max_width + "px" $$'

.user-albums-list
  list-style none

.user-album
  width 242px
  height 240px
  position relative
  display inline-block
  margin-right 40px

.user-album__image-wrapper
  overflow hidden
  width 240px
  height 180px
  border 1px solid gray
  position relative
  z-index 10

.user-album__date
  width 50%
  float left

.user-album__count
  width 50%
  float right
  text-align right
  padding-right 10px

.user-album__footer
  clear both

.user-album__no-cover
  width 100%
  text-align center
  padding-top 80px
