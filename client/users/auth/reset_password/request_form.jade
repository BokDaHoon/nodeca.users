#content.row
  .span6.offset3.well.well-form
    form.form-horizontal(data-on-submit='users.auth.reset_password.request')
      legend
        small.pull-right: a(href=self.link_to('users.auth.login.show')) #{self.t('login')}
        | #{self.head.title}

      .control-group(data-bind='visible: message', style='display: none')
        .controls
          p(data-bind='text: message, css: status')

      .control-group
        label.control-label(for='reset_password_email') #{self.t('email')}
        .controls
          .row-fluid
            input.span12(id='reset_password_email', name='email', type='text')

      != self.partial('@common.blocks.recaptcha')

      .control-group
        .controls
          button.btn.btn-primary.btn-large(type='submit') #{self.t('reset_password')}
