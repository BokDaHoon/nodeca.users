#content.row
  .col-sm-8.col-sm-offset-2
    .panel.panel-default

      .panel-heading
        .panel-title #{self.head.title}
          .pull-right: small: a(href=self.link_to('users.auth.login.show')) #{self.t('login')}

      form.panel-body.form-horizontal(data-on-submit='users.auth.register.exec')
        // ko with: email
        .form-group(data-bind='css: css')
          label.control-label.col-md-3(for='register_email') #{self.t('email')}
          .col-md-9
            input.form-control(id='register_email', name='email', type='email', data-bind='value: value')
            span.help-block(data-bind='text: help')
        // /ko

        // ko with: pass
        .form-group(data-bind='css: css')
          label.control-label.col-md-3(for='register_pass') #{self.t('pass')}
          .col-md-9
            input.form-control(id='register_pass', name='pass', type='password', data-bind='value: value')
            span.help-block(data-bind='text: help')
        // /ko


        // ko with: nick
        .form-group(data-bind='css: css')
          label.control-label.col-md-3(for='register_nick') #{self.t('nick')}
          .col-md-9
            input.form-control(
              id='register_nick',
              name='nick',
              type='text',
              data-bind='value: value, valueUpdate: "afterkeydown"')
            span.help-block(data-bind='text: help')
        // /ko

        // ko with: recaptcha_response_field
        != self.partial('@common.blocks.recaptcha')
        // /ko

        .form-group
          .col-md-9.col-md-offset-3
            button.btn.btn-primary(type='submit') #{self.t('register')}
