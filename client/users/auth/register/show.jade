#content.row
  .span8.offset2.well.well-form
    form.form-horizontal(data-on-submit='users.auth.register')

      legend
        small.pull-right: a(href=self.link_to('users.auth.login.show')) #{self.t('login')}
        | #{self.head.title}


      .control-group
        label.control-label(for='register_email') #{self.t('email')}
        .controls
          .row-fluid
            input.span12(id='register_email', name='email', type='email')
            span.help-block #{self.t('email_help')}


      .control-group
        label.control-label(for='register_pass') #{self.t('pass')}
        .controls
          .row-fluid
            input.span12(id='register_pass', name='pass', type='password')
            span.help-block #{self.t('pass_help')}


      .control-group
        label.control-label(for='register_nick') #{self.t('nick')}
        .controls
          .row-fluid
            input.span12(
              id='register_nick',
              name='nick',
              type='text',
              data-bind='value: nick, valueUpdate: "afterkeydown"')
            span.help-block #{self.t('nick_help')}
              

      != self.partial('@common.blocks.recaptcha')

      .control-group
        .controls
          button.btn.btn-primary.btn-large(type='submit') #{self.t('register')}
