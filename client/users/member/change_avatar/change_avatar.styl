.change-avatar-upload__text
  padding-right 15px
  text-align center
  line-height 34px
  overflow hidden
  white-space nowrap
  text-overflow ellipsis

.change-avatar-upload
  padding 10px 15px
  margin-bottom 10px
  border 1px solid darkgray
  &.active
    border 1px dashed black
  .btn
    margin-left 5px

.change-avatar-image__canvas
  max-width 100%

.change-avatar-image
  position relative

.change-avatar-image__select
  position absolute
  border 1px solid #000000
  left 0px
  top 0px
  cursor move

.change-avatar-image__select-in
  position relative
  width 100%
  height 100%

.change-avatar-image__select-resize
  position absolute
  right 0px
  bottom 0px
  width 10px
  height 10px
  background #000000
  cursor nw-resize

.change-avatar-preview
  width 150px
  height 150px
  border 1px solid #000000
