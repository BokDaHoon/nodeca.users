@import "nodeca.core/client/common/_variables"

filledNoteBg = #fcf8e3
//filledNoteBg = $brand-warning

.usernote
  width 100%
  border-radius 4px
  background-color filledNoteBg
  border 1px solid filledNoteBg - 20%
  padding 1rem 1rem .5rem
  margin 1.5rem 0

.usernote__controls
  margin-right -10px
  margin-top -10px
  opacity .5
  transition opacity .5s ease
  &:hover
    opacity 1

.usernote__m-placeholder
  cursor pointer
  background-color grayLightest + 60%
  border none
  padding 7px 15px
  text-align center
  color gray
  opacity .5
  transition opacity .5s ease
  &:hover
    opacity 1
