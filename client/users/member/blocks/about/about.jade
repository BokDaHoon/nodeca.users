.member-block

  .member-block__header
    .member-block__header-title.h2
      .member-block__header-text.pull-xs-left
        = self.t('title')
      a.member-block__header-collapser(href='#member-about-info', data-toggle='collapse')
        .pull-xs-right.icon.icon-collapse
        .pull-xs-right.icon.icon-expand

  #member-about-info.member-block__inner.collapse.in
    dl.member-about-text.dl-horizontal
      dt Registered:
      dd 15 jun 2009

    dl.member-about-text.dl-horizontal
      dt Posts:
      dd: a(href='#') 212

    dl.member-about-text.dl-horizontal
      dt Location:
      dd: a(href='#') New Urupinsk

    if self.blocks.about.contacts && self.blocks.about.contacts.length !== 0
      dl.member-about-text.dl-horizontal
        dt Contacts:
        dd

          ul.member-block__contacts-inline.collapse.in
            each contact in self.blocks.about.contacts
              - var messenger = self.blocks.about.messengers[contact.messenger]
              li.member-block__contacts-inline-item
                button.btn.btn-link(
                  class=messenger.icon_class
                  data-toggle='popover'
                  data-trigger='click;focus'
                  data-placement='top'
                  data-content=contact.value
                )
            li
              button.btn.btn-link.icon.icon-expand(href='.member-block__contacts-inline,.member-block__contacts-expand', data-toggle='collapse')

          ul.member-block__contacts-expand.collapse.out
            each contact in self.blocks.about.contacts
              - var messenger = self.blocks.about.messengers[contact.messenger]
              li.member-block__contacts-expand-item
                span.member-block__contacts-expand-name= messenger.name
                span.member-block__contacts-expand-value= contact.value


    dl.member-about-text.dl-horizontal
      dt Birthday:
      dd 13 feb 1983

    dl.member-about-text.dl-horizontal
      dt Interests:
      dd Music, Books, Football, Tennis
