#content
  != self.partial('@common.blocks.navbar.logo_apps')

  .layout__container.container-fluid.space-top
    .row
      .col-md-6.offset-md-3.col-sm-8.offset-sm-2
        .card

          h1.card-header.h3
            =self.head.title

          form.card-block(data-on-submit='users.dialogs_root.unsubscribe.index:confirm')

            .form-group
              =self.t('confirmation')

            .form-group
              .checkbox
                label
                  input(type='checkbox' name='confirm' data-on-change='users.dialogs_root.unsubscribe.index:change')
                  | 
                  =self.t('label')

            button#dialogs-unsubscribe.btn.btn-primary(type='submit' disabled=true)=self.t('ok')
