@import "nodeca.core/client/common/_variables"

#media-upload__bar
  width 80%
  height 25px
  text-align center
  margin 0 auto
  position relative
  overflow hidden

#media-upload__progress
  background #125375
  height 25px
  position absolute
  left 0px
  top 0px
  width 0%
  z-index 10

#media-upload__data
  color #d3d3d3
  position absolute
  left 49%
  top 3px
  z-index 20
