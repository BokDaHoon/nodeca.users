- self.add_raw_data('setting_schemas', self.setting_schemas)
- self.add_raw_data('settings', self.settings)

#content.user-settings-general-root
  != self.partial('@common.blocks.navbar')

  nav.breadcrumbs-container
    .layout__container.container-fluid
      != self.partial('@users.blocks.breadcrumbs')

  .layout__container.container-fluid
    != self.partial('@users.blocks.announces')

    .user-settings__tabs.nav.nav-tabs-underlined
      a.nav-link.active(href=self.link_to('users.settings.general'))= self.t('general')
      a.nav-link(href=self.link_to('users.settings.about'))= self.t('about')
      a.nav-link(href=self.link_to('users.settings.ignore'))= self.t('ignore')

    form.form.user-settings__tab-content.user-settings__m-narrow#user-settings-general(data-bind='submit: submit')
      // ko foreach: categories

      fieldset
        legend(data-bind='text: name')

        // ko foreach: settings

        .form-group.form-group-hover

          // ko if: type === 'string'
          label(data-bind='text: name')
          input.form-control(type='text' data-bind='value: value, valueUpdate: "keyup"')
          // /ko

          // ko if: type === 'dropdown'
          label(data-bind='text: name')
          select.form-control.custom-select(data-bind="options: valueOptions, optionsText: 'title', optionsValue: 'value', value: value")
          // /ko

          // ko if: type === 'number'
          label(data-bind='text: name')
          input.form-control(type='number' data-bind='value: value, valueUpdate: "keyup"')
          // /ko

          // ko if: type === 'boolean'
          .checkbox.form-check
            label.form-check-label
              input.form-check-input(type='checkbox' data-bind='checked: value')
              span(data-bind='text: name')
          // /ko

          // ko if: help
          small.text-muted(data-bind="text: help")
          // /ko

        // /ko

      // /ko

      br
      button.btn.btn-primary(type='submit', data-bind='enable: isDirty')= self.t('submit')
