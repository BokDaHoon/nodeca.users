@import "nodeca.core/client/common/_variables"

.user-dialog-list-item
  padding (baseLineHeight / 2)
  border-bottom 1px solid grayLightest
  &:last-child
    border-bottom none

.user-dialog-list-item__m-unread
  .user-dialog-list-item__title
    font-weight bold

.user-dialog-list-item__content
  position relative
  margin-left 50px

.user-dialog-list-item__avatar
  img
    width 40px
    height 40px

.user-dialog-list-item__aside
  float left

.user-dialog-list-item__title
  font-size 14px
  shortable()

.user-dialog-list-item__preview
  font-size 12px

.user-dialog-list-item__link
  text-decoration none
  color inherit
  display block
  margin-right 100px
  &:hover
    text-decoration none
    color inherit
    .user-dialog-list-item__title
      text-decoration underline
      color linkColorHover

.user-dialog-list-item__info
  position absolute
  right 0px
  top 0px

.user-dialog-list-item__preview-nick
  &:before
    content "["
  &:after
    content "] "
