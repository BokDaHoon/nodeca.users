@import "nodeca.core/client/common/_variables"

.media-select-dlg__content
  overflow auto

.media-select-dlg__sidebar
  vertical-align top
  float left
  width 110px
  overflow auto

.media-select-dlg__mlist-item
  display inline-block
  padding-right 3px
  padding-bottom 3px

.media-select-dlg__mlist-item.selected
  opacity 0.7
  .thumb
    border-color #008000
    border-style dashed

.media-select-dlg__album-list
  list-style none
  margin 0px
  padding 0px

.media-select-dlg__album
  shortable()
