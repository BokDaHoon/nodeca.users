@import "nodeca.core/client/common/_variables"

.media-select-dlg__files
  display table-cell
  ul
    list-style none

.media-select-dlg__media
  display inline-block
  padding-right 3px
  padding-bottom 3px
  &.selected
    opacity 0.7
    .thumb
      border-color #008000
      border-style dashed

.media-select-dlg__sidebar
  vertical-align top
  float left
  width 110px
  overflow hidden
  ul
    list-style none

.media-select-dlg__album-list
  margin 0px
  padding 0px


.media-select-dlg__album
  shortable()
