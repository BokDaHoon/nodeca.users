.media-select-dlg__files
  display table-cell
  ul
    list-style none

.media-select-dlg__media
  display inline-block
  padding-right 3px
  padding-bottom 3px
  &.selected
    opacity 0.7
    .thumb
      border-color #008000
      border-style dashed

.media-select-dlg__albums
  vertical-align top
  display table-cell
  width 110px
  overflow hidden
  ul
    list-style none

.media-select-dlg__list
  display table-row
