@import "nodeca.core/client/common/_variables"

.user-tracker-items
  list-style none
  padding 0

.user-tracker-item
  border-top 1px solid $decorator-color
  padding 1rem 0
  &:first-child
    border-top none

.user-tracker-item__title
  font-family sansWideFontFamily
  position relative
  font-weight normal
  font-size $font-size-base
  line-height 1.3
  margin-top 0
  margin-bottom 0

.user-tracker-item__title-link
  color $body-color
  &:hover
    color linkColorHover

.user-tracker-item__updated
  color $body-color-secondary

.user-tracker-item__desc
  color $body-color-secondary
  font-size $font-size-xs
  shortable()

a.user-tracker-item__desc-link
  color inherit
  &:hover
    color linkColorHover

.user-tracker-item__author
  color $body-color-secondary
  font-size $font-size-xs
  &:hover
    color linkColorHover
