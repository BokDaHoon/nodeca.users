@import "nodeca.core/client/common/_variables"


.user-album-upload
  padding 1rem
  text-align center
  background-color lighten($decorator-color, 60%)
  margin-bottom 1.5rem
  border-radius 3px
  border 1px solid lighten($decorator-color, 60%)

  shortable()

  &.active
    border 1px dashed black

.user-album-upload__text
  padding-right 15px
  text-align center
  line-height 34px
  shortable()


.user-album-root__no-files
  display none

.user-album-root.no-files
  .user-album-root__no-files
    display block
  .user-medialist
    display none
