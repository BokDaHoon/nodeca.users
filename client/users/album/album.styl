@import "nodeca.core/client/common/_variables"

.user-album-page .page-head__descr
  font-size 14px
  color gray
  margin-left 0

.user-medialist
  padding 0
  margin-left -20px

.user-medialist__item
  display inline-block
  margin-left 20px
  margin-bottom 20px

.user-album-upload
  padding 10px 15px
  &.active
    border 1px dashed black

  .btn
    margin-left 5px

.user-album-upload__text
  padding-right 15px
  text-align center
  line-height 34px
  shortable()

.user-album-page__no-files
  display none

.user-album-page.no-files
  .user-album-page__no-files
    display block
