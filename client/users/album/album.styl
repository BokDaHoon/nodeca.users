@import "nodeca.core/client/common/_variables"


.user-album-upload
  padding 1rem
  text-align center
  background-color $decorator-color + 60%
  margin-bottom 1.5rem
  border-radius 3px
  border 1px solid ($decorator-color + 60%)
  shortable()

  &.active
    border 1px dashed black

.user-album-root__no-files
  display none

.user-album-root.no-files
  .user-album-root__no-files
    display block
  .user-medialist
    display none

.user-album-root__loading-prev
.user-album-root__loading-next
  padding 2rem
  font-size 3rem
  text-align center
  background-color $body-bg-secondary
  color $body-color-secondary
  border-radius 4px
  margin-bottom 2rem
