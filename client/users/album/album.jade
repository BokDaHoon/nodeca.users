- var own_page = (self.runtime.user_hid === self.user_hid)
- self.add_raw_data('profile_tab', own_page)

#content
  != self.partial('@common.blocks.breadcrumbs')

  .breadcrumbs
    if own_page && self.album && !self.album.default
      a.btn.btn-default.btn-sm(href=self.link_to('users.album.edit', { 'user_hid': self.user_hid, 'album_id': self.album._id }))= self.t('edit')

  header.page-head
    h1.page-head__title(itemprop='name')
      =self.album ? self.album.title : self.t('title_all_files')
    p.page-head__descr.hidden-xs(itemprop='description')

  if own_page && self.album
    #users-album__upload(data-on-dragdrop='users.album:dd_area')
      span#users-album__upload-text= self.t('drag_to_upload')
      #users-album__upload-button-wrapper
        span#users-album__upload-button.btn.btn-default= self.t('select_files')
          input(name='files[]' type='file' multiple)#users-album__upload-files
        button.btn.btn-default(data-on-click='users.album:create_medialink' data-providers=self.medialink_providers.join(', '))= self.t('create_medialink')

  ul#users-medias-list.user-medialist._affix(data-affix={ 'bottom': 160, 'wire': 'users.album:append_more_photos', 'class': 'append-more-photos' })
    != self.partial('@users.album.list')
