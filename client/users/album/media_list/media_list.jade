ul.user-medias-list.row
  each media in self.medias
    li.col-md-3
      .user-media
        .user-media__image-wrapper
          -// TODO: check is it really image
          a(href=self.link_to('users.media', { 'user_hid': self.user_hid, 'media_id': media._id }))
            - var imageUrl = self.link_to('core.gridfs', { 'bucket': media.file_id + '_md' })
            img.user-media__image(src=imageUrl)
        .user-media__description=media.description
        .user-media__date= self.date(media.created_at, 'date')
