span.oauth-btns__item
  - var link = '' +
  -   'https://accounts.google.com/o/oauth2/auth' +
  -   '?scope=email%20profile' +
  -   '&state=/profile' +
  -   '&redirect_uri=' + self.link_to('users.auth.callback', { provider: 'google' }) +
  -   '&response_type=code' +
  -   '&client_id=' + self.blocks.oauth['google'] +
  -   '&approval_prompt=force'

  a.oauth__link.icon-google(href= link, title=self.t('name')) g
