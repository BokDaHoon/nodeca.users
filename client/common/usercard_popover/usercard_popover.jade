#ucard-popover
  .ucard-head.cleafix
    a(href=self.link_to('users.member', { user_hid: self.user.hid }))= self.user.name
  
  aside.ucard-sidebar
    a.ucard-avatar(href=self.link_to('users.member', { user_hid: self.user.hid }))
      img.av-l(alt=self.user.name)&attributes(self.avatar(self.user))

    button.btn.btn-default.btn-xs.btn-block= self.t('find_posts')
    if self.settings.can_use_messages && self.settings.can_send_messages && self.runtime.user_hid !== self.user.hid
      button.btn.btn-default.btn-xs.btn-block(
        data-on-click='common.usercard_popover:message'
        data-to=self.user.nick
      )= self.t('send_message')

  .ucard-info
    dl.dl-horizontal
      if self.penalty_expire
        dt=self.t('penalty_title')
        dd!=self.timetag(self.penalty_expire, 'compact')

      if self.infractions_points && self.infractions_points > 0
        dt=self.t('infractions_title')
        dd=self.t('infractions_text', self.infractions_points)

      dt Age
      dd 32

      dt City
      dd Honolulu

      dt Member since
      dd #{self.date(self.user.joined_ts, 'relative')}

      dt Total posts
      dd 678

      dt Last active
      dd Now
