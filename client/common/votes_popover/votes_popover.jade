if self.votes.up.length !== 0
  ul.votes-popover__list
    li.votes-popover__list-title=self.t('voted_up')
    each userId in self.votes.up
      if self.users[userId]
        li.votes-popover__vote
          a(href=self.link_to('users.member', { user_hid: self.users[userId].hid })) #{self.users[userId].name}

if self.votes.down.length !== 0
  ul.votes-popover__list
    li.votes-popover__list-title=self.t('voted_down')
    each userId in self.votes.down
      if self.users[userId]
        li.votes-popover__vote
          a(href=self.link_to('users.member', { user_hid: self.users[userId].hid })) #{self.users[userId].name}
